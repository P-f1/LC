{
	"name": "flogo-keyword-mapping",
	"type": "flogo:activity",
	"ref": "github.com/P-f1/LC/Kubernetes/activity/keywordreplacement",
	"version": "0.0.1",
	"title": "Keyword Replacement",
	"display": {
    		"category": "Kubernetes",
    		"visible": true,
    		"smallIcon": "keywordreplacement.png",
  		"description": "Replace keywords in file with predefined variables "
	},
	"settings": [
		{ 
			"name": "Template",
			"type": "string", 
			"required": true,
			"display": { 
				"name": "Template",
				"description": "Document template", 
				"type": "fileselector" 
			} 
		},
		{
			"name": "LeftToken",
			"type": "string",
			"required": true,
			"display": {
				"name": "Left Token",
				"description": "The left token around keyword"
			}
		},
		{
			"name": "RightToken",
			"type": "string",
			"required": true,
			"display": {
				"name": "Right Token",
				"description": "The right token around keyword"
			}
		},
		{
			"name": "Mapping",
			"type": "array",
			"required": true,
			"display": {
				"name": "Mapping",
				"description": "Mapping keyword with variable",
				"type": "table",
				"schema": "{\r\n    \"$schema\": \"http:\/\/json-schema.org\/draft-04\/schema#\",\r\n    \"definitions\": {},\r\n    \"id\": \"http:\/\/example.com\/example.json\",\r\n    \"items\": {\r\n        \"id\": \"\/items\",\r\n        \"properties\": {\r\n            \"Keyword\": {\r\n                \"id\": \"\/items\/properties\/Keyword\",\r\n                \"type\": \"string\"\r\n            },\r\n            \"Variable\": {\r\n                \"id\": \"\/items\/properties\/Variable\",\r\n                \"type\": \"string\"\r\n            },\r\n            \"Type\": {\r\n                \"id\": \"\/items\/properties\/Type\",\r\n                \"type\": {\"enum\":[\"String\", \"Integer\", \"Long\", \"Double\", \"Boolean\"]}\r\n            }\r\n        },\r\n        \"type\": \"object\"\r\n    },\r\n    \"type\": \"array\"\r\n}"
			}
		}
	],
	"input":[
		{
			"name": "Variables",
			"type": "complex_object"
		}
	],
	"output": [
		{
            "name": "Document",
            "type": "string"
		}
	]
}
