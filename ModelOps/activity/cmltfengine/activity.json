{
    "name": "cmltfengine",
    "version": "1.0.0",
    "title": "CML TensorFlow engine",
    "author": "TIBCO Software Inc.",
    "type": "flogo:activity",
    "display": {
       "category": "ModelOps",
       "visible": true,
       "smallIcon": "cmltfengine.png",
       "description": "This activity build and execuate CML cmltfengine"
    },
    "ref": "github.com/P-f1/LC/ModelOps/activity/cmltfengine",
	"settings": [
		{ 
        "name": "plugin",
        "type": "string",
        "required": true,
			"display": { 
				"name": "Engine Plugin",
				"description": "The Golang plugin for TensorFlow engine.", 
				"type": "string",
 				"appPropertySupport": true
			} 
		},
		{ 
        "name": "model",
        "type": "string",
        "required": true,
			"display": { 
				"name": "Model",
				"description": "The location to the archive. If using TensorFlow, the archive must contain the TensorFlow SavedModel", 
				"type": "string",
 				"appPropertySupport": true
			} 
		},
		{
        "name": "framework",
        "type": "string",
        "required": true,
			"display": {
				"name": "Framework",
				"description": "The framework to use. Other frameworks can be registered at build time, the only available framework is 'TensorFlow'",
 				"appPropertySupport": true
			},
			"allowed": ["TensorFlow"]
		},
		{
        "name": "sigDefName",
        "type": "string",
        "required": false,
        "value":"serving_default",
			"display": {
				"name": "Signature Definition",
				"description": "The default signature definition. This comes from the SavedModel metadata. The default value is 'serving_default'",
 				"appPropertySupport": true
			}
		},
		{
        "name": "tag",
        "type": "string",
        "required": false,
        "value":"serve",
			"display": {
				"name": "Model Tag",
				"description": "The model tag. This comes from the SavedModel metadata. The default value is 'serve'",
 				"appPropertySupport": true
			}
		},
		{
			"name": "InputSchema",
			"type": "array",
			"required": false,
			"display": {
				"name": "Define input fields",
				"description": "Define input fields",
				"type": "table",
				"schema": "{\r\n    \"$schema\": \"http:\/\/json-schema.org\/draft-04\/schema#\",\r\n    \"definitions\": {},\r\n    \"id\": \"http:\/\/example.com\/example.json\",\r\n    \"items\": {\r\n        \"id\": \"\/items\",\r\n        \"properties\": {\r\n            \"FieldName\": {\r\n                \"id\": \"\/items\/properties\/FieldName\",\r\n                \"type\": \"string\"\r\n            },\r\n         \"Default\": {\r\n                \"id\": \"\/items\/properties\/Default\",\r\n                \"type\": \"string\"\r\n            },\r\n            \"Type\": {\r\n                \"id\": \"\/items\/properties\/Type\",\r\n                \"type\": {\"enum\":[\"String\", \"Integer\", \"Long\", \"Double\", \"Boolean\", \"Date\", \"Object\", \"Array\"]}\r\n            }\r\n,\r\n            \"Optional\": {\r\n                \"id\": \"\/items\/properties\/Optional\",\r\n                \"type\": {\"enum\":[\"yes\", \"no\"]}\r\n            }\r\n        },\r\n        \"type\": \"object\"\r\n    },\r\n    \"type\": \"array\"\r\n}"
			}
		}
	],
    "inputs": [
		{
			"name": "Input",
			"type": "complex_object"
		}
    ],
	"outputs": [
		{
			"name": "Output",
			"type": "object"
		}
	]
}