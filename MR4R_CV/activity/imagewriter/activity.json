{
	"name": "flogo-mr4r-imagewriter",
	"type": "flogo:activity",
	"ref": "github.com/TIBCOSoftware/MR4R_CV/activity/imagewriter",
	"version": "0.0.1",
	"title": "Image Writer",
	"return": true,
	"homepage": "https://github.com/TIBCOSoftware/MR4R_CV/activity/imagewriter",
	"display": {
		"category": "MR4R_CV",
		"visible": true,
		"smallIcon": "imagewriter.png",
		"description": "This activity save image to file"
	},
	"settings": [
        {
            "name":"toFileFolder", 
            "type":"string", 
            "optional":false,
			"display": {
				"name": "File Folder",
            		"description":"Output folder."
			}
        },
        {
            "name":"filename", 
            "type":"string", 
            "optional":false,
			"display": {
				"name": "Filename",
            		"description":"Image filename."
			}
        },
        {
            "name":"extension", 
            "type":"string", 
            "optional":false,
			"display": {
				"name": "Extension",
				"description": "File extension for the image: ex. jpg(jpeg), png, gif."
			},
            "allowed": ["jpg", "jpeg", "png", "gif"]
        }
	],
	"input":[
		{
			"name": "Image",
			"description":"the image (or encoded video frame) string to be saved", 
			"type": "string"
		}
	],
	"output": [
	]
}
