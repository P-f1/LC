{
	"name": "flogo-vf-encoder",
	"type": "flogo:activity",
	"ref": "github.com/TIBCOSoftware/MR4R_CV/activity/vfencoder",
	"version": "0.0.1",
	"title": "Video Frame Encoder",
	"return": true,
	"homepage": "https://github.com/TIBCOSoftware/MR4R_CV/activity/vfencoder",
	"display": {
		"category": "MR4R_CV",
		"visible": true,
		"smallIcon": "vfencoder.png",
		"description": "This activity encode video frame to different image format"
	},
	"settings": [
		{
			"name": "Extension",
			"type": "string",
			"required": true,
			"display": {
				"name": "Extension",
				"description": "File extension for type of the encoded image"
			},
			"allowed":[".jpg", ".png", ".gif"]
		}
	],
	"input":[
		{
			"name": "RawVideoFrame",
			"type": "string"
		},
		{
			"name": "FrameWidth",
			"type": "integer"
		},
		{
			"name": "FrameHeight",
			"type": "integer"
		}
	],
	"outputs": [
		{
			"name": "EncodedVideoFrame",
			"type": "string"
		}
	]
}
